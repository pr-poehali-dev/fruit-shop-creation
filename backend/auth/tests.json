{
  "tests": [
    {
      "name": "Admin login requires code",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "phone": "+7 (999) 123-45-67",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "requires_code": true,
        "user": {
          "id": 1,
          "is_admin": true
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials returns 401",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "phone": "+7 (999) 999-99-99",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "bodyMatcher": "partial"
    }
  ]
}
